<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/habit_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HabitActivity">

    <LinearLayout
        android:id="@+id/spacing_habit"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:orientation="vertical"/>

    <RelativeLayout
        android:layout_below="@id/spacing_habit"
        android:id="@+id/habit_menu"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/montserrat_regular"
            android:id="@+id/habit_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:letterSpacing="0.2"
            android:text="TODAY"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/add_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="107dp"
            android:layout_toEndOf="@id/habit_today"
            android:src="@drawable/habit_add" />

    </RelativeLayout>

    <ListView
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/habit_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView" />

</RelativeLayout>