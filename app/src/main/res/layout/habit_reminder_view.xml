<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/habit_reminder_view_close"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/habit_reminder_view_title"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Reminder"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:letterSpacing="0.05"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/habit_reminder_view_save"
            android:layout_toRightOf="@id/habit_reminder_view_title"
            android:layout_marginStart="120dp"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/habit_tick" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_below="@id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:src="@drawable/notification_none" />

            <TextView
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Reminders ON"
                android:textColor="@color/colorBlack"
                android:letterSpacing="0.05" />

            <Switch
                android:layout_marginStart="225dp"
                android:id="@+id/habit_reminder_view_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textOff="OFF"
                android:textOn="ON"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:src="@drawable/access_alarm" />

            <TextView
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert time"
                android:textColor="@color/colorBlack"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/habit_reminder_view_displaytime"
                android:layout_marginStart="240dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textColor="@color/colorBlack"
                android:letterSpacing="0.05" />

        </LinearLayout>

        <TimePicker
            android:id="@+id/habit_reminder_view_timepicker"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:src="@drawable/edit" />

            <TextView
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write your custom reminder text!"
                android:textColor="@color/colorBlack"
                android:letterSpacing="0.05" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/habit_reminder_view_customtext"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:maxLength="30"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/montserrat_regular"
                android:padding="20dp"
                android:hint="Write something to motivate you!"
                android:maxLines="1"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>