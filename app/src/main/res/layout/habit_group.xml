<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/habit_group_view_close"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/habit_reminder_view_title"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:letterSpacing="0.05"
            android:textAlignment="center" />

        <Button
            android:id="@+id/habit_group_view_cancel"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="90dp"
            android:layout_toRightOf="@id/habit_reminder_view_title"
            android:background="@drawable/habit_btn_background2"
            android:fontFamily="@font/montserrat_regular"
            android:letterSpacing="0.1"
            android:src="@drawable/menu_addhabit"
            android:text="REMOVE"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/second"
        android:background="@color/colorGrey"
        android:layout_below="@id/first"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12dp"
                android:letterSpacing="0.1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Current Group: "
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/current_grp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12dp"
                android:letterSpacing="0.1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="None"
                android:textColor="@color/colorWhite" />

        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/second"
        android:layout_above="@id/btm"
        android:id="@+id/habit_recycler_view"
        android:layout_width="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/btm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/habit_group_view_create_group"
            android:layout_width="190dp"
            android:layout_height="29dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/habit_btn_background2"
            android:fontFamily="@font/montserrat_regular"
            android:letterSpacing="0.1"
            android:text="Create New Group" />

    </LinearLayout>
</RelativeLayout>