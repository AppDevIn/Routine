<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/habit_group_view_close"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/habit_reminder_view_title"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:letterSpacing="0.05"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/habit_group_view_save"
            android:layout_toRightOf="@id/habit_reminder_view_title"
            android:layout_marginStart="120dp"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/habit_tick" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/first"
        android:layout_above="@id/btm"
        android:id="@+id/habit_recycler_view"
        android:layout_width="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/btm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

       <Button
           android:id="@+id/habit_group_view_create_group"
           android:layout_marginBottom="5dp"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:text="Create Group"
           android:background="@color/colorUnsaturatedGrey"/>

    </LinearLayout>
</RelativeLayout>